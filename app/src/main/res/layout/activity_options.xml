<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.txstyle.Options">

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="@dimen/options_margin_left"
        android:background="@color/optionsColor"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pick_your_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/options_margin_top"
            android:layout_marginLeft="@dimen/options_margin_left"
            android:src="@drawable/pick_your_background"
            android:maxWidth="@dimen/pick_your_background_width"
            android:maxHeight="@dimen/pick_your_background_height"/>
        <ImageButton
            android:id="@+id/choose_camera_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/options_margin_from_logo_to_button"
            android:layout_marginLeft="@dimen/options_margin_buttons_left"
            android:src="@drawable/camera"
            android:background="@color/optionsColor"
            android:maxWidth="@dimen/choose_btn_size"
            android:maxHeight="@dimen/choose_btn_size"
            />
        <ImageButton
            android:id="@+id/choose_gallery_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/options_margin_between_buttons"
            android:layout_marginLeft="@dimen/options_margin_buttons_left"
            android:src="@drawable/gallry"
            android:background="@color/optionsColor"
            android:maxWidth="@dimen/choose_btn_size"
            android:maxHeight="@dimen/choose_btn_size"
            />
        <ImageButton
            android:id="@+id/choose_color_picker_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/options_margin_between_buttons"
            android:layout_marginLeft="@dimen/options_margin_buttons_left"
            android:src="@drawable/color_picker"
            android:background="@color/optionsColor"
            android:maxWidth="@dimen/choose_btn_size"
            android:maxHeight="@dimen/choose_btn_size"

            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
